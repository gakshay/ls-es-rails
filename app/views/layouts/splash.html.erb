<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "LogSearch" %></title>
    <%= stylesheet_link_tag "application", "jquery.ui" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="">
      <div style="float:right;">
          <% if user_signed_in? %>
          <%= current_user.email %>
          <span><%= link_to "Sign out", destroy_user_session_path, :class => "button green" %></span>
          <% else %>
            <span><%= link_to "Login", new_user_session_url, :class => "button green" %></span>
            <span><%= link_to "Register", new_user_registration_url, :class => "button green" %></span>
          <% end %>
      </div>
      <div style="clear:both;"></div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%#= content_tag :h1, yield(:title) if show_title? %>
    </div>
      <%= yield %>
  </body>
</html>
